<div class="accordion container" data-module="accordion">
  <div class="accordion__header">
    <h2 class="accordion__title">{{title}}</h2>
    <div class="rtf accordion__description">
      <p>{{description}}</p>
    </div>
  </div>

  <div class="accordion__items">
    {{#each items}}
      <div class="accordion__item">
        <button class="accordion__item-trigger" aria-expanded="{{#if @first}}true{{else}}false{{/if}}" id="trigger-{{@index}}" aria-controls="panel-{{@index}}">
          <h3 class="accordion__item-title">{{title}}</h3>
          <span class="accordion__item-icon">
            {{> svg name="minus" className="accordion__item-icon-minus"}}
            {{> svg name="plus" className="accordion__item-icon-plus"}}
          </span>
        </button>

        <div id="panel-{{@index}}" role="region" aria-labelledby="trigger-{{@index}}" class="accordion__item-panel">
          <div class="accordion__item-content">
            <h4 class="accordion__item-heading">{{heading}}</h4>
            <div class="rtf accordion__item-description">
              <p>{{{copy}}}</p>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
