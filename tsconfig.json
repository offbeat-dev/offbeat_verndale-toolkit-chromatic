{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "typeRoots": ["./node_modules/@types", "./src/@types", "./.storybook/@types"],
  "include": [
    "./src/**/*",
    "./webpack/*",
    "./config.ts",
    "./webpack.config.ts",
    "./.storybook/**/*"
  ]
}
